        <iframe src="https://www.youtube.com/embed/<%=@movie.youtubelink %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe><br><br>
    </div>
    <div class="info-container">
        <p class="title"><%=@movie.title %></p><hr>
